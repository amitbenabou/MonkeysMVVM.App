<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonkeysMVVM.Views.MonkeyView"
             Title="MonkeyView">
    <VerticalStackLayout>
        <Entry Text="{Binding LocationEntry}"
               VerticalOptions="Center" 
               HorizontalOptions="Center"/>
        <Button Text="Get Monkeys" Command="{Binding GetMonkeyCommand}"/>
        <Label Text="{Binding NumberOfMonkeysInLocation}" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Label Text="{Binding Name}" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Label Text="{Binding Location}" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Image Source="{Binding ImageUrl}" HeightRequest="200"></Image>


    </VerticalStackLayout>
</ContentPage>